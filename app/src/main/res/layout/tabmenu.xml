                    <TextView
                        android:id="@+id/ll_settings_text"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="4dp"
                        android:text="@string/toolbar_menu_settings"
                        android:gravity="center_vertical|left"
                        android:textColor="@color/black"
                        android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layoutmenu_contact"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/layoutmenu_settings"
                    android:background="@color/header_layout"
                    android:gravity="center_vertical">
                    <com.innohawk.dan.activitymaps.RoundedImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="4dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="left|center_vertical|center"
                        android:background="@drawable/ic_menu_logobud" />
                    <TextView
                        android:id="@+id/ll_contact_text"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="4dp"
                        android:text="@string/toolbar_menu_contact"
                        android:gravity="center_vertical|left"
                        android:textColor="@color/black"
                        android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layoutmenu_logout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="14dp"
                    android:layout_below="@+id/layoutmenu_contact"
                    android:background="@color/header_layout"
                    android:gravity="center_vertical">
                    <com.innohawk.dan.activitymaps.RoundedImageView
                        android:layout_width="30dp"
