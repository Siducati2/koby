<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_bg_background">
    <!-- android:layout_below="@+id/navTitle" -->
    <FrameLayout
        android:id="@+id/rel_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ListView
            android:id="@+id/list_detail"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="@color/header_layout"
            android:dividerHeight="3px"
            android:scrollIndicators="none"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:paddingTop="110dp"
            android:paddingBottom="60dp"
            android:clipToPadding="false">
        </ListView>
        <!--<Button
            android:id="@+id/buttonEdit"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/innohawk_roundcorner"
            android:drawableTop="@android:drawable/sym_action_email"
            android:text="write mail"
            android:textColor="@color/aluminum"
            android:textSize="8dp" />-->
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fl_head"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/new_Headerbackground_opacity">
        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/navTitle"
            android:layout_marginTop="5dp">
            <Button
                android:id="@+id/btn_menu"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/ic_menu_logobud"/>
            <EditText
                android:id="@+id/Search_Edit"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/btn_menu"
                android:layout_toLeftOf="@+id/btn_gostore"
                android:layout_toRightOf="@+id/btn_menu"
                android:layout_toStartOf="@+id/btn_gostore"
                android:background="@drawable/innohawk_bordersearch"
                android:ems="12"
                android:gravity="center_horizontal|center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="@string/header_Search"
                android:textColorHint="#999999"
                android:textSize="12dp"
                android:singleLine="true"
                android:imeOptions="actionSearch" />
            <Button
                android:id="@+id/btn_gostore"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/ic_menu_store" />
        </RelativeLayout>
    </FrameLayout>
    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_below="@+id/fl_head"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/innohawk_header_background">
        <Button
            android:id="@+id/buttonRefresh"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:text=""
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="@drawable/header_reload" />
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/buttonRefresh"
            android:layout_alignBottom="@+id/buttonRefresh"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:text=" - "
            android:textColor="@color/black"
            android:textColorHint="#999999"
            android:textSize="15sp" />
        <Button
            android:id="@+id/buttonMy"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="65dp"
            android:clickable="true"
            android:text=""
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="@drawable/header_config"
            android:visibility="gone"/>
        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:text=""
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/header_add"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_infodialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_notdata_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </RelativeLayout>
    <!--DropMenu-->
    <RelativeLayout
        android:id="@+id/rl_background_closeDropmenu_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_trans"
        android:visibility="invisible">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/common_google_signin_btn_text_light_default" />
    </RelativeLayout>
    <android.support.v4.widget.DrawerLayout
