<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <android.support.v4.view.ViewPager
        android:id="@+id/introContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dim_foreground_disabled_material_dark"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/bottom_intro_layout"
        android:background="#50ffffff"/>

    <RelativeLayout
        android:id="@+id/bottom_intro_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        >

        <Button
            android:id="@+id/btn_intro_skip"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:text="@string/skip_button"
            android:textSize="16sp"
            android:textColor="@color/abc_primary_text_material_dark"
            android:background="@drawable/xml_selectable_element"/>

        <LinearLayout
            android:id="@+id/bubble_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">

        </LinearLayout>

        <Button
            android:id="@+id/btn_intro_done"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:text="@string/done_button"
            android:textSize="16sp"
            android:textColor="@color/abc_primary_text_material_dark"
            android:background="@drawable/xml_selectable_element"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/btn_intro_next"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:src="@drawable/ic_menu_next"
            android:layout_alignParentRight="true"
            android:background="@drawable/xml_selectable_element"
            android:scaleType="fitCenter"
            />
    </RelativeLayout>

</RelativeLayout>
