<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout
        android:id="@+id/rl_cell"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/new_bg_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="true"
                android:gravity="left|center_vertical"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="150dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Tienda X"
                    android:textSize="14sp"
                    android:textColor="@color/com_facebook_blue"
                    android:layout_alignBottom="@+id/img_iconpin"
                    android:gravity="center_vertical|center" />

                <ImageView
                    android:id="@+id/img_iconpin"
                    android:layout_toRightOf="@+id/txt_name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bubble"
                    android:contentDescription="pinmap" />

                <TextView
                    android:id="@+id/txt_distance"
                    android:layout_toRightOf="@+id/img_iconpin"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="23.524 m."
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_alignBottom="@+id/img_iconpin"
                    android:gravity="center_vertical|center"
                    android:layout_alignTop="@+id/img_iconpin"
                    android:layout_toStartOf="@+id/img_icontype" />

                <ImageView
                    android:id="@+id/img_icontype"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:background="@android:drawable/presence_video_busy"
                    android:contentDescription="type_option" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>