<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@drawable/xml_bg_list_item"
	android:padding="5dip">
	<FrameLayout android:id="@+id/home_btn" style="@style/OOHomeButtonCont"
		android:background="#00ffffff">
		<LinearLayout style="@style/OOHomeButton"
			android:background="#00ffffff">
		    <com.innohawk.dan.LoaderImageView
                android:id="@+id/home_btn_icon" style="@style/OOHomeButtonImage" />
			<TextView android:id="@+id/home_btn_title" android:text="@string/mail_menu" style="@style/OOHomeButtonText" />
		</LinearLayout>		
	</FrameLayout>
	<TextView android:id="@+id/home_btn_bubble" android:text="" style="@style/OOHomeButtonBubble" />
</FrameLayout>
