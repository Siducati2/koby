<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/welcome_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipChildren="false"
    android:background="@drawable/intro1"
    android:weightSum="8"
    android:paddingTop="48dp">

    <FrameLayout
        android:id="@+id/imageCont1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:clipChildren="false">
        <ImageView
            android:id="@+id/imgShowCont1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/logo_about_512"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:layout_gravity="center"/>
    </FrameLayout>
    <TextView
        android:id="@+id/titleCont"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_weight="1"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:textSize="32sp"
        android:textColor="#ffffff"
        android:gravity="bottom|center_horizontal"
        android:text="@string/Intro_title_1" />
    <TextView
        android:id="@+id/textCont"
        android:text="@string/Intro_text_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:gravity="top|center_horizontal"
        android:minHeight="96dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/transparent"/>
</LinearLayout>
