<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout
        android:id="@+id/rl_cell"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/color_trans">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/color_trans">
            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/newnoti"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:contentDescription="bubble"
                    android:layout_margin="4dp"
                    android:text=""
                    android:background="@drawable/bg_bubble"/>

                <TextView
                    android:id="@+id/txt_data"
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/img_iconpin"
                    android:layout_toEndOf="@+id/newnoti"
                    android:layout_toRightOf="@+id/newnoti"
                    android:gravity="center_vertical|right"
                    android:text="about 1 day"
                    android:textColor="@color/aluminum"
                    android:textSize="9sp"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/txt_description"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/newnoti"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_toEndOf="@+id/newnoti"
                    android:layout_toRightOf="@+id/newnoti"
                    android:gravity="left"
                    android:text=" -"
                    android:textSize="14dp"
                    android:maxLines="2"/>
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>