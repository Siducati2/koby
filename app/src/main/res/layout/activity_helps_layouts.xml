<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/new_bg_background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/navTitle"
        android:background="@color/color_trans">
        <ImageView
            android:id="@+id/about_logo"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:contentDescription="@string/title_about"
            android:src="@drawable/logo_general"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/about_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/about_logo"
            android:layout_margin="5dp"
            android:background="@drawable/innohawk_border_edittext"
            android:textAppearance="@style/MyDefaultTextAppearance"
            android:textColor="@color/black"
            android:textColorLink="@color/icono_all_page_strong"
            android:textSize="14dip"
            android:scrollIndicators="none"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:paddingTop="40dp"
            android:paddingBottom="60dp"
            android:clipToPadding="false"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/navTitle"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/innohawk_header_background">
        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/navTitle">
            <Button
                android:id="@+id/buttonBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/header_back"/>
            <TextView
                android:id="@+id/textTitle"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/buttonBack"
                android:layout_toLeftOf="@+id/buttonRefresh"
                android:layout_toRightOf="@+id/buttonBack"
                android:layout_toStartOf="@+id/buttonRefresh"
                android:ems="12"
                android:gravity="center_horizontal|center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:text= " Title "
                android:textColor="@color/black"
                android:textColorHint="#999999"
                android:textSize="15sp" />
            <Button
                android:id="@+id/buttonRefresh"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/header_reload"
                android:visibility="invisible"/>
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>