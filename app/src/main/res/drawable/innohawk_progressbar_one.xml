<layer-list xmlns:android="http://schemas.android.com/apk/res/android"> <!-- Remove <selector> wehn you are using <layer-list> -->
    <item>
        <shape android:shape="ring"
            android:useLevel="false"
            android:innerRadius="100dp"
            android:thicknessRatio="25"> <!-- Higher values, thinner line -->
            <solid android:color="@color/new_Headerbackground_opacity"> </solid>
        </shape>
    </item>
    <item>
        <shape android:shape="ring"
            android:useLevel="true"
            android:innerRadius="100dp"
            android:thicknessRatio="25">
            <solid android:color="@color/tabbar"> </solid>
        </shape>
    </item>
</layer-list>